# Database (using Supabase or local PostgreSQL)
# NEVER commit real credentials - use environment variables in production
DATABASE_URL="postgresql://user:password@localhost:5432/familytree"

# JWT - Generate a strong secret: openssl rand -base64 48
# MUST be at least 32 characters long (enforced at startup)
JWT_SECRET="your-strong-secret-here-minimum-32-characters"
JWT_EXPIRY="7d"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# CORS - Frontend URL
FRONTEND_URL="http://localhost:5173"

# Server
PORT=3000
NODE_ENV="development"

# Email (SMTP) - For security alerts (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""
ADMIN_ALERT_EMAIL=""
