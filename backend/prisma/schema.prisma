// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String?  @map("password_hash")
  googleId      String?  @unique @map("google_id")
  fullName      String   @map("full_name")
  role          Role     @default(USER)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  lastLogin     DateTime? @map("last_login")

  // Relations
  createdPersons      Person[]         @relation("PersonCreator")
  createdRelationships Relationship[]   @relation("RelationshipCreator")
  branchOwnerships    BranchOwnership[]
  auditLogs           AuditLog[]
  reviewedDuplicates  DuplicateSuggestion[] @relation("DuplicateReviewer")
  grantedOwnerships   BranchOwnership[] @relation("OwnershipGranter")

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Person {
  id             String    @id @default(uuid())
  firstName      String    @map("first_name")
  middleName     String?   @map("middle_name")
  lastName       String    @map("last_name")
  createdById    String    @map("created_by")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relations
  createdBy             User                @relation("PersonCreator", fields: [createdById], references: [id])
  relationshipsAsPerson1 Relationship[]     @relation("Person1")
  relationshipsAsPerson2 Relationship[]     @relation("Person2")
  branchOwnerships      BranchOwnership[]
  duplicatesAsPerson1   DuplicateSuggestion[] @relation("DuplicatePerson1")
  duplicatesAsPerson2   DuplicateSuggestion[] @relation("DuplicatePerson2")

  @@index([createdById])
  @@index([firstName, lastName])
  @@map("persons")
}

// V2 Fields (removed for simplified V1):
// - maidenName, birthDate, deathDate, gender, isAlive, notes

model Relationship {
  id               String           @id @default(uuid())
  person1Id        String           @map("person1_id")
  person2Id        String           @map("person2_id")
  relationshipType RelationshipType @map("relationship_type")
  createdById      String           @map("created_by")
  createdAt        DateTime         @default(now()) @map("created_at")

  // Relations
  person1   Person @relation("Person1", fields: [person1Id], references: [id], onDelete: Cascade)
  person2   Person @relation("Person2", fields: [person2Id], references: [id], onDelete: Cascade)
  createdBy User   @relation("RelationshipCreator", fields: [createdById], references: [id])

  @@unique([person1Id, person2Id, relationshipType])
  @@index([person1Id])
  @@index([person2Id])
  @@index([relationshipType])
  @@index([createdById])
  @@map("relationships")
}

enum RelationshipType {
  PARENT  // person1 is parent of person2
  SPOUSE  // person1 and person2 are spouses
  SIBLING // person1 and person2 are siblings
}

model BranchOwnership {
  id             String         @id @default(uuid())
  userId         String         @map("user_id")
  personId       String         @map("person_id")
  ownershipType  OwnershipType  @default(CREATOR) @map("ownership_type")
  grantedById    String?        @map("granted_by")
  createdAt      DateTime       @default(now()) @map("created_at")

  // Relations
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  person    Person  @relation(fields: [personId], references: [id], onDelete: Cascade)
  grantedBy User?   @relation("OwnershipGranter", fields: [grantedById], references: [id])

  @@unique([userId, personId])
  @@index([userId])
  @@index([personId])
  @@map("branch_ownership")
}

enum OwnershipType {
  CREATOR
  GRANTED
}

model DuplicateSuggestion {
  id              String               @id @default(uuid())
  person1Id       String               @map("person1_id")
  person2Id       String               @map("person2_id")
  similarityScore Decimal              @map("similarity_score") @db.Decimal(5, 2)
  status          DuplicateStatus      @default(PENDING)
  reviewedById    String?              @map("reviewed_by")
  reviewedAt      DateTime?            @map("reviewed_at")
  createdAt       DateTime             @default(now()) @map("created_at")

  // Relations
  person1    Person  @relation("DuplicatePerson1", fields: [person1Id], references: [id], onDelete: Cascade)
  person2    Person  @relation("DuplicatePerson2", fields: [person2Id], references: [id], onDelete: Cascade)
  reviewedBy User?   @relation("DuplicateReviewer", fields: [reviewedById], references: [id])

  @@unique([person1Id, person2Id])
  @@index([status])
  @@index([similarityScore(sort: Desc)])
  @@map("duplicate_suggestions")
}

enum DuplicateStatus {
  PENDING
  MERGED
  DISMISSED
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
}

enum EntityType {
  PERSON
  RELATIONSHIP
  USER
}

model AuditLog {
  id          String     @id @default(uuid())
  userId      String?    @map("user_id")
  actionType  ActionType @map("action_type")
  entityType  EntityType @map("entity_type")
  entityId    String?    @map("entity_id")
  oldData     Json?      @map("old_data")
  newData     Json?      @map("new_data")
  ipAddress   String?    @map("ip_address")
  createdAt   DateTime   @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt(sort: Desc)])
  @@map("audit_log")
}

model FamilyConfig {
  id            String   @id @default(uuid())
  passwordHash  String   @map("password_hash")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("family_config")
}
